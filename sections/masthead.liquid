<div id="section-id-{{ section.id }}" data-section-type="homepage-header" data-cc-animate class="c-masthead">
    <div class="c-masthead__image">
      <img src="{{ section.settings.image | img_url: '1024x1024' }}" alt="{{ section.settings.image.alt | escape }}">
    </div>
    <div class="c-masthead__content">
      <div class="c-masthead__content--inner">
        <img src="{{'orta-logo.svg' | asset_url }}" alt="">
        <div class="c-masthead__title-container" data-cc-animate="cc-fade-in-up" data-cc-animate-delay="0.1s">
            <h1 class="c-masthead__title">
                <strong>Vestalia</strong><br> A Thoughtful Collection
            </h1>
        </div>
        <div class="c-masthead__summary-container" data-cc-animate="cc-fade-in-up" data-cc-animate-delay="0.2s">
            <p>A Vestalia home is a tastefully curated gallery for works of ground breaking design, old and new.</p>
        </div>
        <div class="c-masthead__link-container" data-cc-animate="cc-fade-in-up" data-cc-animate-delay="0.3s">
            <a href="/">Shop all</a>
        </div>
      </div>
    </div>
</div>

{% schema %}
{
  "name": "masthead",
  "class": "header-overlap-section",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_page_content",
      "label": "Show page content",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Main Image",
      "info": "520 x 200px recommended"
    }
  ]
}
{% endschema %}
